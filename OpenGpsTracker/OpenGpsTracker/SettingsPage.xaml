<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenGpsTracker.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Адрес сервера"></Label>
            <Entry Text="http://private.opengts.com.ua:8080/track/Service" x:Name="serverAddress"></Entry>            
            
            <Label Text="Включить автообновление трекеров" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
            <Switch x:Name="AutoUpdateEnable" IsToggled="false" VerticalOptions="Center" HorizontalOptions="End" Toggled="AutoUpdateEnable_Toggled" Scale="0.5"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>